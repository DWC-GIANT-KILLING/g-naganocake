<h1>注文履歴一覧#index</h1>

<table>
  <thead>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
  </thead>
  <tbody>
  <% インスタンス変数.each do |oreder| %>
      <tr>
          <td><%= oreder. %></td>
          <td><%= oreder. %></td>
          <td><%= oreder. %></td>
          <td><% @合計金額 +=  cart_item.subtotal %></td>
          <td><%= oreder.is_deleted? '入金待ち' : '入金確認' : '製作中' : '発送準備中' : '発送済み' %></td>
          <td><%= link_to orders_path do %>
                <button>表示する</button>
              <% end %>
          </td>
      </tr>
  <% end %>
  </tbody>
</table>

