<h1>注文履歴一覧</h1>

<div>
  <table class="table">
    <tr>
      <th class="head">注文日</th>
      <th class="head">配送先</th>
      <th class="head">注文商品</th>
      <th class="head">支払金額</th>
      <th class="head">ステータス</th>
      <th class="head">注文詳細</th>
    </tr>
      <% @orders.each do |order| %>
    <tr>
      <td class="data">
        <%= order.created_at.strftime("%Y/%m/%d") %>
      </td>
      <td class="data">
        〒<%= order.postcode %><br>
        <%= order.address %><br>
        <%= order.full_name %>
      </td>

      <td class="data">
        <% order.order_details.each do |order_detail| %>
          <%= order_detail.item.name %><br>
        <% end %>
      </td>
      <td class="data">
        <%= order.total_price %>
      </td>
      <td class="data">
        <%= order.status_i18n %>
      </td>
      <td class="data">
        <%= link_to "表示する", order_path(order) %>
      </td>
    </tr>
    <% end %>
  </table>
</div>

<div>
  <%= paginate @orders %>
</div>