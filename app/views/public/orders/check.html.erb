<h1>注文情報確認</h1>

<div>
  <table>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>

  <% @cart_items.each do |cart_item| %>
    </tr>
      <td>
        <!--%= image_tag cart_item.item.get_image(70,100) % -->
        <%= cart_item.item.name %>
      </td>
      <td>
        <%= cart_item.item.with_tax_price.to_s(:delimited) %>
      </td>
      <td>
        <%= cart_item.piece %>
      </td>
      <td>
        <%= cart_item.subtotal.to_s(:delimited) %>
        <% @price += cart_item.subtotal %>
      </td>
    </tr>
    <% end %>
  </table>
  <table>
    <tr>
      <th>送料</th>
      <td><%= @order.delivery_cost = 800 %></td>
    </tr>
    <tr>
      <th>商品合計</th>
      <td><%= @price.to_s(:delimited)%></td>
    </tr>
    <tr>
      <th>請求金額</th>
        <%= @order.total_price = @order.delivery_cost + @price.to_i %>
      <td><%= @order.total_price.to_s(:delimited) %></td>
    </tr>
  </table>
</div>

<div>
  <h3>支払方法</h3>
  <%= @order.payment_i18n %>
</div>
<div>
  <h3>お届け先</h3>
  <div>
    〒<%= @order.postcode %><%= @order.address %><br>
    <%= @order.full_name%>
  </div>
</div>
  <%= form_with model: @order, url:orders_path, method: :post, local:true do |f| %>
<div>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :postcode%>
  <%= f.hidden_field :full_name %>
  <%= f.hidden_field :payment %>
  <%= f.hidden_field :delivery_cost %>
  <%= f.hidden_field :total_price, :value => @order.total_price %>
</div>
<div>
  <%= f.submit "注文を確定する" %>
</div>
<% end %>