<h1>注文情報確認#check</h1>

<div>
  <table>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  
  <%= @cart_items.each do |cart_item| %>  
    </tr>
      <td>
        <%= image_tag cart_item.item.get_image(70,100) %>
        <%= cart_item.item.item_name %>
      </td>
      <td>
        <%= cart_item.tax_price.to_s(:delimited) %>
      </td>
      <td>
        <%= cart_item.count %>
      </td>
      <td>
        <%= cart_item.subtotal.to_s(:delimited) %>
      </td>
    </tr>
    <% end %>
  </table>
  <table>
    <tr>
      <th>送料</th>
      <td><%= @order.postage = 800 %></td>
    </tr>
    <tr>
      <th>商品合計</th>
      <td><%= taotal.to_s(:delimited)%></td>
    </tr>
    <tr>
      <th>請求金額</th>
        <%= @order.pay_price = @order.postage + total.to_i %>
      <td><%= order.pay_price.to_s(:delimited) %></td>
    </tr>
  </table>
</div>

<div>
  <h3>支払方法</h3>
  <%= @order.payment_i18n %>
</div>
<div> 
  <h3>お届け先</h3>
  <div>
    〒<%= @order.postcode %><%= @order.address %><br>
    <%= @order.full_name%>
  </div>
</div>  
  <%= form_with model: @order, url:order_path, method: :post, local:true do |f| %>
  <%= f.hidden_field :customer_id %>
  <%= f.hidden_field :address %>
  <%= f.hidden_field :postcode%>
  <%= f.hidden_field :full_name %>
  <%= f.hidden_field :payment %>
  <%= f.hidden_field :postage %>
  <%= f.hidden_field :pay_price %>
  <%= f.hidden_field :order_status %>
</div>

<div>  
  <%= link_to orders_thanx_path do %>
    <button>注文を確定する</button>
  <% end %>
</div>