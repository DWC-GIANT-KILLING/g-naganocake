<h1>配送先登録/一覧</h1>


  <%= form_with model: @address do |f| %>
    <table class="mt-3">
      <tr>
        <td><%= f.label :postcode,"郵便番号（ハイフンなし）" %></td>
        <td><%= f.text_field :postcode, placeholder: "0000000", class: "custom-input" %></td>
      </tr>
      <tr>
        <td><%= f.label :address ,"住所 "%></td>
        <td colspan = "2"><%= f.text_field  :address ,placeholder: "東京都渋谷区代々木神園町0−0", :size=> "60", class: "custom-input" %></td>
      </tr>
      <tr>
        <td><%= f.label :full_name,"宛名" %></td>
        <td><%= f.text_field :full_name, placeholder: "令和道子", :size=> "30", class: "custom-input" %></td>
        <td> <%= f.submit "新規登録",class: "btn custom-button" %></td>
      </tr>
    </table>
    <% end %>


  <table class="table table-bordered">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th　colspan="3"></th>
      </tr>
    </thead>  
    <tbody>
    <% @addresses.each do |addresse| %>
      <tr>
        <td><%= address.postalcode %></td>
        <td><%= address.address %></td>
        <td><%= address.full_name %></td>
        <td style="text-align: center;">
        <%= link_to "編集する", edit_address_path(address.id),class: "btn btn-success mr-5" %>
        <%= link_to "削除する", address_path(address.id), method: :delete data: { confirm: 'ほんまにええの?' },　class: "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
