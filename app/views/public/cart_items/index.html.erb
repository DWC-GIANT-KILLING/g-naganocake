<%= flash[:notice] %>

<h1>カート</h1>
<%= link_to '買い物をつづける', items_path %>
<% @customer.cart_items.each do |cart_item|%>
  <table>
    <tr>
      <thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </thead>
    </tr>
    
    <tr>
      <tbody>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.piece %></td>
        <td><%= cart_item.subtotal %></td>
        <td><%= link_to '削除する', cart_item_path(cart_item.current_cusstomer), method: :delete %></td>
      </tbody>
    </tr>
  </table>
    <%= cart_item.subtotal %>
    <% @price += cart_item.subtotal %>
  <%= link_to 'カートを空にする', cart_items_destroy_all_path(current_customer), method: :delete %>
<% end %>

