<main>
  <div class="form">
    <h2 class="back-color">新規会員登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="">
        <div class="box1">名前</div>
        <div class="field">
          <%= f.label :last_name, "(姓)" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </div>

        <div class="field">
          <%= f.label :first_name, "(名)" %>
          <%= f.text_field :first_name, autocomplete: "first_name" %>
        </div>
      </div>

      <div class="">
        <div>フリガナ</div>
        <div class="field">
          <%= f.label :last_name_kana, "(セイ)" %>
          <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
        </div>

        <div class="field">
          <%= f.label :first_name_kana, "(メイ)" %>
          <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
      </div>
    </div>

    <div class="">
      <div>
      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :postcode, "郵便番号" %>
        <%= f.text_field :postcode, autocomplete: "postcode" %>
      </div>

      <div class="field">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, autocomplete: "address" %>
      </div>

      <div class="field">
        <%= f.label :phone_number, "電話番号" %>
        <%= f.text_field :phone_number, autocomplete: "phone_number" %>
      </div>


      <div class="field">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード(確認用)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div>
        <%= f.submit "新規登録", class:"submit" %>
      </div>

    <% end %>

    <div>
      <p class="back-color">すでに登録済みの方は</p>
      <%= link_to "こちら", customer_session_path %>
      からログインしてください。
    </div>
  </div>
</main>