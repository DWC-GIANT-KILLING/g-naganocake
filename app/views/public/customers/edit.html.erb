<div>
  <h5>会員情報</h5>
  <div>
    <%= form_with model: @customer, url: customers_update_path, method: :patch do |f| %>
      <table>
        <tr>
          <td>名前</td>
          <td><%= f.label :last_name, "(姓)"%></td>
          <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
          <td><%= f.label :first_name, "(名)"%></td>
          <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.label :last_name_kana, "(セイ)"%></td>
          <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
          <td><%= f.label :first_name_kana, "(メイ)"%></td>
          <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
        </tr>
        <tr>
          <td><%= f.label :email, "メールアドレス"%></td>
          <td></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :post_code, "郵便番号(ハイフンなし)" %></td>
          <td></td>
          <td><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :address, "住所" %></td>
          <td></td>
          <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
        </tr>
        <tr>
          <td><%= f.label :phone_number, "電話番号(ハイフンなし)" %></td>
          <td></td>
          <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td><%= f.submit "編集内容を保存" %></td>
          <td></td>
          <td><%= link_to _path do %>
	        		  <button>退会する</button>
	          	<% end %>
		      </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>