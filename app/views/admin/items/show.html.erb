<div>
  <%= flash[:notice] %>
</div>

<h1>商品詳細</h1>
<% if @item.image.attached? %>
  <%= image_tag @item.get_item_image(300,400)  %>
<% else %>
  <%= image_tag 'no_image'  %>
<% end %>

<table>
   <tr>
     <th>商品名</th>
     <td><%= @item.name %></td>
   </tr>
   <tr>
     <th>商品説明</th>
     <td><%= @item.detail %></td>
    </tr>
    <tr>
     <th>ジャンル</th>
     <td><%= @item.genre_id %></td>
    </tr>
    <tr>
     <th>税込価格(税抜き価格）</th>
     <td><%= @item.with_tax_price %></td>
     <td><%= @item.unit_price %></td>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <td><% if @item.is_selling == true %>
             販売中
          <% end %>
          <% if @item.is_selling == false %>
             販売停止中
          <% end %>
      </td>
    </tr>
</table>
<%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %>
<%= link_to "削除する", admin_item_path(@item), method: :delete, data: { confirm: '削除する？' }, class: "btn btn-sm btn-danger"%>