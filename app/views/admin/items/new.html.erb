<h1>商品新規登録</h1>
<%= render 'layouts/error', obj: @item %>
  <%= form_with model: @item, url: admin_items_path  do |f| %>
   <table>
      <tr>
        <th>商品画像</th>
        <td><%= f.file_field :image, accept: "image*"%></td>
      </tr>
      <tr>
        <th>商品名</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th>商品説明</th>
        <td><%= f.text_area :detail %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
        <td><%= f.select :genre_id,[['ケーキ',1], ['プリン',2], ['焼き菓子',3],['キャンディー',4]], {include_blank: '---'} %></td>
      </tr>
      <tr>
        <th>税抜価格</th>
        <td><%= f.text_field :unit_price %>円</td>
      </tr>
      <tr>
        <th>販売ステータス</th>
          <td>
              <%= f.label :is_selling, '販売中' %>
              <%= f.radio_button :is_selling, :true %>
              <%= f.label :is_selling, '販売停止中' %>
              <%= f.radio_button :is_selling, :false, checked: true %>
          </td>
      </tr>
    </table>
    <%= f.submit'新規登録', class: "btn btn-success" %>
  <% end %>