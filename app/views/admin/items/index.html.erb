  <div>
    <%= flash[:notice] %>
  </div>

<h1>商品一覧</h1>
  <%= link_to new_admin_item_path, class: "button" do %>
    <div>新規登録</div>
  <% end %>

<table>
  <thead>
    <tr>
      <th class="head">商品ID</th>
      <th class="head">商品名</th>
      <th class="head">税抜価格</th>
      <th class="head">ジャンル</th>
      <th class="head">ステータス</th>
    </tr>
  </thead>
  <tbody>
   <% @items.each do |item| %>
     <tr>
        <td class="data"><%= item.id %></td>
        <td class="data"><%= link_to item.name, admin_item_path(item) %></td>
        <td class="data">¥<%= item.unit_price %></td>
        <td class="data"><%= item.genre.name %></td>
        <td class="data">
          <% if item.is_selling == true %>
            販売中
           <% end %>
         <% if item.is_selling == false %>
            売り切れ
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= paginate @items %>
</div>