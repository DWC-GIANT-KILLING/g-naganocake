<h1>注文履歴一覧</h1>

<table>
   <thead>
     <tr>
       <th>購入日時</th>
       <th>購入者</th>
       <th>注文個数</th>
       <th>注文ステータス</th>
     </tr>
   </thead>
   <tbody>
     <% @order.each do |order| %>
       <tr>
         <td><%= link_to order.create_at.in_time_zone('Asia/Tokyo').strftime('%Y/%m/%d %H:%M:%S') %></td>
         <td><%= orders.full_name %></td>
         <td><%= order.piece %></td>
         <td><%= order.order_status %></td>
       </tr>
     <% end %>
   </tbody>
</table>

