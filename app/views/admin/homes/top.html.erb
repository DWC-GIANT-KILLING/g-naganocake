<h1>商品一覧</h1>
<%= link_to '★新規登録☆', new_admin_item_path  %>

<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
   <% @items.each do |item| %>
     <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item) %></td>
        <td>¥<%= item.unit_price %></td>
        <td><%= item.genre.name %></td>
        <td><% if item.is_selling == true %>
            販売中
           <% end %>
         <% if item.is_selling == false %>
            売り切れ
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

