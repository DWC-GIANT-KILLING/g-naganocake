<h1>注文履歴一覧</h1>

<table>
   <thead>
     <tr>
       <th class="head">購入日時</th>
       <th class="head">購入者</th>
       <th class="head">注文個数</th>
       <th class="head">注文ステータス</th>
     </tr>
   </thead>
   <tbody>
     <% @orders.each do |order| %>
       <tr>
         <td class="data"><%= link_to  order.created_at.in_time_zone('Asia/Tokyo').strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order) %></td>
         <td class="data"><%= order.customer.last_name %><%= order.customer.first_name %></td>
         <td class="data"><%= order.order_details.sum(:piece) %></td>
         <td class="data"><%= order.status_i18n %></td>
       </tr>
     <% end %>
   </tbody>
</table>

<%= paginate @orders %>

