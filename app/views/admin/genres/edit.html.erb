<%= render 'layouts/error', obj: @genre %>

<h1>ジャンル編集</h1>

<body class="form-container">
  <div class="form">
    <%= form_with model: @genre, url: admin_genre_path do |f| %>
    <table>
      <tr>
        <thead>ジャンル名</thead>
        <tbody>
          <td class="field"><%= f.text_field :name %></td>
          <td><%= f.submit '変更を保存', class:"button"%></td>
          </tbody>
      </tr>
    </table>
    <% end %>
  </div>
</body>