
  <div>
    <h1><%= @customer.full_name %>さんの会員詳細情報</h1>
  </div>
  
  <div>
    <table>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id%></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %></td>
        <td><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @customer.last_name_kana %></td>
        <td><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postcode %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td><%= @customer.is_deleted ? '退会' : '有効' %></td>
      </tr>
      
    </table>
  </div>
  <div>
    <%= link_to "編集", edit_admin_customer_path(@customer.id) %>
    <%= link_to "注文履歴一覧へ", admin_path %>
  </div>
