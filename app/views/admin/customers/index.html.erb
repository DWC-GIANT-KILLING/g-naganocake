
<div>
    <h1>会員一覧</h1>
</div>

<table class="table">
    <thead>
      <th class="head">会員ID</th>
      <th class="head">氏名</th>
      <th class="head">メールアドレス</th>
      <th class="head">ステータス</th>
    </thead>
    
    <tbody>
      <% @customers.each do |customer|%>
        <tr>
          <td><%= customer.id%></td>
          <td>
            <%= link_to admin_customer_path(customer) do %>
            <%= customer.full_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td><%= customer.is_deleted ? '退会' : '有効' %></td>
        </tr>
      <% end %>
    </tbody>
    
</table>

<div>
  <%= paginate @customers %>
</div>